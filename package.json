{
  "name": "crypto-portfolio",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:gh": "ng build --prod --configuration production --base-href='https://j-chimienti.github.io/crypto-portfolio/' --output-path docs",
    "build:ce": "ng build --configuration cx --output-path chrome-ext",
    "build:local": "ng build --prod --configuration production --output-path dist",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postbuild:ce": "cp manifest.json chrome-ext",
    "postbuild:gh": "cp docs/index.html docs/404.html",
    "deploy": "gh-pages -d ./docs",
    "predeploy": "npm run build:gh",
    "build:all": "npm run deploy && npm run build:ce"
  },
  "private": false,
  "dependencies": {
    "@angular/animations": "^6.1.0",
    "@angular/common": "^6.1.0",
    "@angular/compiler": "^6.1.0",
    "@angular/core": "^6.1.0",
    "@angular/forms": "^6.1.0",
    "@angular/http": "^6.1.0",
    "@angular/platform-browser": "^6.1.0",
    "@angular/platform-browser-dynamic": "^6.1.0",
    "@angular/router": "^6.1.0",
    "bootstrap": "^4.1.3",
    "bootswatch": "^4.1.3",
    "c3": "^0.6.7",
    "core-js": "^2.5.4",
    "crypto-icons": "^1.0.18",
    "d3": "^5.5.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.4",
    "rxjs": "^6.0.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.7.0",
    "@angular/cli": "~6.1.4",
    "@angular/compiler-cli": "^6.1.0",
    "@angular/language-service": "^6.1.0",
    "@types/jasmine": "~2.8.6",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "codelyzer": "~4.2.1",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~1.7.1",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.0",
    "karma-jasmine": "~1.1.1",
    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "~5.4.0",
    "ts-node": "~5.0.1",
    "tslint": "~5.9.1",
    "typescript": "~2.7.2"
  }
}
